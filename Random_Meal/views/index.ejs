<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Random-Meal</title>
    <link rel="stylesheet" type="text/css" href="/styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <div class="row text-center my-5">
            <div>
                <h1>Feeling hungry?</h1>
            </div>
            <div>
                <h3 class="my-3">Get a random meal by clicking below</h3>
            </div>
            <div>
                <form action="/recipe" method="post">
                    <input type="submit" value="Get a random meal" class="btn btn-primary
                    btn-lg
                    my-3
                    px-5
                    py-2">
                </form>
            </div>
        </div>

        <% if (locals.recipe) {%>
            <div class="meal">
                <div class="mb-3 d-flex justify-content-center">
                    <h1 class="title text-decoration-underline">
                        <%= recipe.strMeal %>
                    </h1>
                </div>

                <div class="d-flex justify-content-around mb-4">
                    <div class="category">
                        <p>
                            <strong>Category: </strong>
                            <%= recipe.strCategory %>
                        </p>
                    </div>
                    <div class="area">
                        <p>
                            <strong>Area: </strong>
                            <%= recipe.strArea %>
                        </p>
                    </div>
                    <div class="tags">
                        <p>
                            <strong>Tags: </strong>
                            <%= recipe.strTags %>
                        </p>
                    </div>
                </div>

                <div>
                    <img src="<%= recipe.strMealThumb %>" alt="<%= recipe.strMeal %>" class="img-fluid">
                    <h4>Instructions</h4>
                    <p>
                        <%= recipe.strInstructions %>
                </div>



                <div class="my-3 ingredients">
                    <div class="mt-5">
                        <h4>Ingredients</h4>
                        <ul>
                            <% for (let i=1; i <=20; i++) { %>
                                <% if (recipe["strIngredient" + i]) { %>
                                    <li>
                                        <%= recipe["strIngredient" + i] %> - <%= recipe["strMeasure" + i] %>
                                    </li>
                                    <% } %>
                                        <% } %>
                        </ul>
                    </div>

                    <div>
                        <h4>Video Recipe</h4>
                        <iframe width="560" height="315"
                            src="https://www.youtube.com/embed/<%= recipe.strYoutube.slice(-11) %>"
                            title="YouTube video player" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen>
                        </iframe>
                    </div>
                </div>

                
            </div>
            <%} else{ %>
                <% } %>

    </div>
</body>

</html>